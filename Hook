$sRoot = dirname(__FILE__) . '/';

$aPath = array(
		  $sRoot,
		  get_include_path()
		 );
set_include_path(implode(PATH_SEPARATOR, $aPath));

// Hook Objekt.
require_once dirname(__FILE__) . '/Core/Hook.php';

// Objekt erzeugen.
$oMain = new HookMain($argv);

// Framework starten.
$iExit = $oMain->run();

exit($iExit);
